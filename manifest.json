{
  "manifest_version": 2,
  "version": "1.0.0",
  "name": "GPT Assistant for Telegram",
  "description": "This extension adds an GPT Assistants to your browser that can conduct conversations on your behalf in the Telegram Web messenger.",
  "homepage_url": "https://github.com/baklai/gpt-asst-web-ext#readme",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },

  "permissions": ["<all_urls>", "tabs", "activeTab", "storage"],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "GPT Assistant for Telegram",
    "default_icon": "icons/icon-32.png"
  },

  "content_scripts": [
    {
      "matches": ["*://web.telegram.org/*"],
      "js": ["asst.extension.js", "asst.telegram.js"],
      "run_at": "document_end"
    }
  ],

  "content_security_policy": "script-src 'self' 'wasm-unsafe-eval' 'unsafe-eval' https://unpkg.com; object-src 'self'"
}
