{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "GPT Assistant for Telegram",
  "description": "This extension adds a GPT Assistant to your browser that can conduct conversations on your behalf in the Telegram Web messenger.",
  "homepage_url": "https://github.com/baklai/gpt-asst-web-ext#readme",
  "author": "d.n.baklai@gmail.com",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },

  "permissions": ["tabs", "activeTab", "sidePanel", "storage"],

  "host_permissions": ["*://web.telegram.org/*"],

  "background": {
    "service_worker": "src/asst.worker.js"
  },

  "action": {
    "default_title": "Click to open panel"
  },

  "side_panel": {
    "default_path": "src/sidebar.html"
  },

  "content_scripts": [
    {
      "matches": ["*://web.telegram.org/*"],
      "js": ["src/asst.extension.js"],
      "run_at": "document_end"
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; worker-src 'self'"
  }
}
